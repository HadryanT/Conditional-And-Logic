#include <iostream>

int main() {

double weight;
int planet;
 //Ask the user his earth weight
 
std::cout << "Enter your earth weight:\n\n";
std::cin >> weight;

std::cout << "\n" << "I have information for the following planets: \n\n";
std::cout << "   1. Venus   2. Mars    3. Jupiter\n";
std::cout << "   4. Saturn  5. Uranus  6. Neptune\n\n";

std::cout << "Which planet are you visiting?: \n\n";
std::cin >> planet;

if (planet= 1) {
	weight= weight * 0.91;
}
else if (planet= 2) {
	weight= weight * 0.38;
}

else if (planet= 3) {
	weight= weight * 2.34;
}

else if (planet= 4) {
	weight= weight * 1.06;
}

else if (planet= 5) {
	weight= weight * 0.92;
}

else if (planet= 6) {
	weight= weight* 1.19;
}
std::cout <<"\n" <<"Your weight in that planet is " << weight << "\n\n";
}
  
  
